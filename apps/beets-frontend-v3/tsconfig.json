{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "global.d.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
